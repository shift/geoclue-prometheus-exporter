{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "cargo: build"
        },
        {
            "type": "cargo",
            "command": "check",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "cargo: check"
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "cargo: test"
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "cargo: run",
            "args": ["--", "--help"]
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": ["clippy", "--all-targets", "--all-features", "--", "-D", "warnings"],
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "cargo: clippy",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": ["fmt", "--all"],
            "problemMatcher": [],
            "group": "build",
            "label": "cargo: fmt",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": ["doc", "--open", "--no-deps"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "cargo: doc"
        }
    ]
}