{
  "mcpVersion": "2024-11-05",
  "name": "geoclue-prometheus-exporter",
  "version": "0.5.0",
  "description": "MCP server configuration for GeoClue2 Prometheus metrics exporter",
  "servers": {
    "metrics": {
      "command": "node",
      "args": ["mcp/servers/metrics-server.js"],
      "description": "Provides access to Prometheus metrics endpoint",
      "capabilities": {
        "tools": true,
        "resources": true
      }
    },
    "config": {
      "command": "node", 
      "args": ["mcp/servers/config-server.js"],
      "description": "Manages service configuration and settings",
      "capabilities": {
        "tools": true,
        "resources": true
      }
    },
    "monitoring": {
      "command": "node",
      "args": ["mcp/servers/monitoring-server.js"], 
      "description": "Provides health checks and service monitoring",
      "capabilities": {
        "tools": true,
        "resources": true
      }
    }
  },
  "defaults": {
    "host": "127.0.0.1",
    "port": 9090,
    "metricsPath": "/metrics",
    "serviceTimeout": 30000
  }
}